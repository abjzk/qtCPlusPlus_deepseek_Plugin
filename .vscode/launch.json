    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Qt Application with Visual Studio Debugger",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "visualizerFile": "${command:qt-cpp.natvis}",
            "windows": {
                "environment": [
                    {
                        "name": "PATH",
                        "value": "${env:PATH};${command:qt-cpp.kitDirectory}${/}bin"
                    }
                ]
            },
            "args": ["test"]
        }


    ]
}